@{
    ViewData["Title"] = "Reports";
    ViewData["Reports"] = "active";
}

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><strong>Generate Reports</strong></span>
    </div>

    <div class="card-body">


        <!-- Reports Grid -->
        <div class="row g-4">

            <!-- All Assets Report -->
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm h-100 report-card cursor-pointer"
                     data-report-type="all-assets"
                     data-report-title="All Assets Report"
                     data-report-description="Complete list of all assets with creation date filter">
                    <div class="card-body">
                        <h5 class="card-title fw-semibold">All Assets</h5>
                        <p class="card-text text-muted">Export all assets with details and filter by creation date.</p>
                        <span class="text-secondary small">Excel Export Available</span>
                    </div>
                </div>
            </div>

            <!-- Assets Due for Service Report -->
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm h-100 report-card cursor-pointer"
                     data-report-type="due-service"
                     data-report-title="Assets Due for Service"
                     data-report-description="List of assets that are due for servicing, filterable by service date">
                    <div class="card-body">
                        <h5 class="card-title fw-semibold">Assets Due for Service</h5>
                        <p class="card-text text-muted">Export list of assets that require service within selected date range.</p>
                        <span class="text-secondary small">Excel Export Available</span>
                    </div>
                </div>
            </div>

            <!-- Placeholder -->
            <div class="col-md-6 col-lg-4">
                <div class="card border-dashed border-2 text-center text-muted h-100">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <div class="mb-3">
                            <i class="bi bi-plus-circle fs-2 text-secondary"></i>
                        </div>
                        <h5 class="fw-semibold">Add New Report</h5>
                        <p class="mb-0">More reports coming soon...</p>
                    </div>
                </div>
            </div>
        </div>
        </div>
</div>

<!-- Report Modal -->
<div class="modal fade" id="reportModal" tabindex="-1" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content shadow">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Generate Report</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="text-muted small" id="modalDescription">Select date range for your report</p>

                <form id="reportForm">
                    <input type="hidden" id="reportType" name="reportType" />

                    <div class="mb-3">
                        <label for="fromDate" class="form-label">From Date</label>
                        <input type="date" id="fromDate" name="fromDate" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="toDate" class="form-label">To Date</label>
                        <input type="date" id="toDate" name="toDate" class="form-control">
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary d-flex align-items-center">
                            <i class="bi bi-download me-2"></i> Download Report
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const modalEl = document.getElementById('reportModal');
            const modal = new bootstrap.Modal(modalEl);
            const reportCards = document.querySelectorAll('.report-card');
            const reportForm = document.getElementById('reportForm');

            // Open modal on card click
            reportCards.forEach(card => {
                card.addEventListener('click', function () {
                    document.getElementById('reportType').value = this.dataset.reportType;
                    document.getElementById('modalTitle').textContent = this.dataset.reportTitle;
                    document.getElementById('modalDescription').textContent = this.dataset.reportDescription;

                    document.getElementById('fromDate').value = '';
                    document.getElementById('toDate').value = '';

                    modal.show();
                });
            });

            // Handle form submit
            reportForm.addEventListener('submit', function (e) {
                e.preventDefault();

                const formData = new FormData(reportForm);

                // Create hidden form for download
                const tempForm = document.createElement('form');
                tempForm.method = 'POST';
                tempForm.action = '@Url.Action("GenerateReport", "Reports")';
                tempForm.style.display = 'none';

                formData.forEach((value, key) => {
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = key;
                    input.value = value;
                    tempForm.appendChild(input);
                });

                const token = document.querySelector('input[name="__RequestVerificationToken"]');
                if (token) {
                    const tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = token.value;
                    tempForm.appendChild(tokenInput);
                }

                document.body.appendChild(tempForm);
                tempForm.submit();
                document.body.removeChild(tempForm);

                modal.hide();
            });
        });
    </script>
}
