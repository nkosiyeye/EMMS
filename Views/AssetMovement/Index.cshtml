@using EMMS.Utility
@using EMMS.ViewModels
@using static EMMS.Models.Enumerators
@model MoveAssetViewModel;
@{
    ViewData["Title"] = "Move Assets";
    ViewData["moveAsset"] = "active";
    ViewData["JobMovement"] = "active";
    var isAdmin = ViewBag._currrentUserRole.UserType == Enumerators.UserType.Administrator;
    var isManager = ViewBag._currrentUserRole.UserType == Enumerators.UserType.FacilityManager;
}

<div class="card mb-12">
    <div class="card-header">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>Movement History</span>
            <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#moveModal">
                <i class="fa fa-plus me-1"></i> Move Asset
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="table-wrapper">
            <table class="table table-striped table-bordered table-hover" id="movementHistoryTable">
                <thead class="table-dark">
                    <tr>
                        <th>Asset Tag</th>
                        <th>From Facility</th>
                        <th>To Facility</th>
                        <th>Service Point</th>
                        <th>Date Moved</th>
                        <th>Functional Status</th>
                        <th>Reason for Movement</th>
                        <th>Approved</th>
                        <th>Received Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movement in Model.MoveAssets)
                    {
                        <tr>
                            <td>@movement.Asset?.AssetTagNumber</td>
                            <td>@movement.From?.FacilityName</td>
                            <td>@movement.Facility?.FacilityName</td>
                            <td>
                                @if (movement.ServicePoint != null)
                                {
                                    @movement.ServicePoint.Name
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Unknown</span>
                                }
                            </td>
                            <td>@movement.MovementDate.ToShortDateString()</td>
                            <td>@Format.DisplayFunctionalStatus(movement.FunctionalStatus)</td>
                            <td>
                                @if (movement.Reason == MovementReason.Other)
                                {
                                    @movement.OtherReason
                                }
                                else
                                {
                                    @movement.Reason

                                }
                            </td>

                            <td>
                                @if (!movement.IsApproved)
                                {
                                    @if (isManager || isAdmin)
                                    {
                                        <a class="btn btn-sm btn-success"
                                           title="Approve Movement"
                                           asp-controller="AssetMovement"
                                           asp-action="approveMovement"
                                           asp-route-id="@movement.MovementId">
                                            <i class="fa fa-check-circle"></i> Approve
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-success">Approved</span>
                                }
                            </td>

                            <td>
                                @if (movement.DateRejected != null)
                                {
                                    <span class="badge bg-danger">Rejected</span>
                                }
                                else if (movement.DateReceived.HasValue)
                                {
                                    <span class="badge bg-success">Received</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pending</span>
                                }
                            </td>

                            <td>
                                <!-- Edit Button -->
                                @if (!movement.DateReceived.HasValue && !movement.IsApproved)
                                {
                                    <a class="btn btn-sm btn-primary me-1"
                                       title="Edit Movement"
                                       asp-controller="AssetMovement"
                                       asp-action="edit"
                                       asp-route-id="@movement.MovementId">
                                        <i class="fa fa-edit"></i>
                                    </a>

                                    <!-- Delete Button -->
                                    <form asp-action="deleteMovement"
                                          asp-controller="AssetMovement"
                                          method="post"
                                          style="display:inline;"
                                          onsubmit="return confirm('Are you sure you want to delete this movement?');">
                                        <input type="hidden" name="id" value="@movement.MovementId" />
                                        <button type="submit" class="btn btn-sm btn-danger" title="Delete Movement">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </form>
                                }

                                <!-- Gate Pass Button -->
                                @if (movement.IsApproved)
                                {
                                    <a class="btn btn-sm btn-secondary ms-1"
                                       title="Print Gate Pass"
                                       asp-controller="AssetMovement"
                                       asp-action="GatePass"
                                       asp-route-id="@movement.MovementId"
                                       target="_blank">
                                        <i class="fa fa-print"></i> Pass
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="moveModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Asset Movement</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modalAssetBody">
                <div class="table-responsive" id="table-responsive-asset">
                    <div class="table-responsive" id="table-responsive-asset">
                        <table class="table fixed-table table-striped table-bordered table-hover" id="modalAssetTable">
                            <thead>
                                <tr>
                                    <th>Tag</th>
                                    <th>Category</th>
                                    <th>SubCategory</th>
                                    <th>Placement</th>
                                    <th>Location</th>
                                    <th>Functional Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if(Model.AssetIndex.assetViewModels != null)
                                {
                                    @foreach (var asset in Model.AssetIndex.assetViewModels!.Where(a => a.LastMovement?.Reason != Enumerators.MovementReason.Decommission))
                                    {

                                        var lastMove = asset.LastMovement;
                                        <tr>
                                            <td width="10%">@asset.Asset.AssetTagNumber</td>
                                            <td width="10%">@asset.Asset.Category.Name</td>
                                            <td width="10%">@asset.Asset.SubCategory.Name</td>
                                            <td width="10%">@(asset.Asset.IsPlacement ? "Yes" : "No")</td>
                                            <td width="10%">
                                                @if (lastMove != null)
                                                {
                                                    @(lastMove.Facility?.FacilityName ?? lastMove.ServicePoint?.Name ?? "N/A")
                                                }
                                                else
                                                {
                                                    <span>-</span>
                                                }
                                            </td>
                                            <td width="10%">
                                                @if (lastMove != null)
                                                {
                                                    @Format.DisplayFunctionalStatus(lastMove.FunctionalStatus)

                                                }
                                                else
                                                {
                                                    <span>-</span>
                                                }
                                                </td>
                                            @* <td width="10%">@asset.Location</td> // from movement history todo?
                                <td width="10%">@asset.FunctionalStatus</td> *@
                                            <td width="5%" class="action-container">

                                                <a
                                                   class="table-cta-btn"
                                                   title="Move" asp-controller="AssetMovement" asp-action="moveAsset" asp-route-id="@asset.Asset.AssetId">
                                                    <i class="fa fa-arrows-alt"></i> Move Asset
                                                </a>

                                            </td>
                                        </tr>
                                    }
                                }                       
                                </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
                $(document).ready(function () {
            $('#movementHistoryTable').DataTable({
                pageLength: 10,
                order: []
            });

            $('#modalAssetTable').DataTable({
                pageLength: 10,
                order: []
            });
        });
    </script>
}
