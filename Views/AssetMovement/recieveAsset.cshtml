<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm Rejection Form</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row mb-3">
                        <!-- Date -->
                        <div class="col-md-4">
                            <label for="rejectedDate" class="form-label required-field">Date Rejected</label>
                            <input type="date" class="form-control" id="movementDate" required>
                        </div>
                        <!-- Asset Name / Tag -->
                        <div class="col-md-4">
                            <label for="rejectassetId" class="form-label required-field">Asset Name / Tag</label>
                            <input type="text" value="Patient Monitor - AS-001" class="form-control" id="rejectassetId" required readonly>
                            <!-- Populate dynamically -->
                        </div>


                        <!-- Reason -->
                        <div class="col-md-4">
                            <label for="reason" class="form-label required-field">Reason</label>
                            <select class="form-select" id="reason" required>
                                <option selected disabled>Select Reason</option>
                                <option value="faulty">Faulty</option>
                                <option value="wrong-specification">Wrong Specification</option>
                                <option value="old">OLD</option>
                            </select>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary">Reject</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>

    <script>

                document.addEventListener("DOMContentLoaded", function () {
            // Get the modal and the asset tag input field
            const Modal = document.getElementById("rejectModal");
            const assetTagInput = document.getElementById("rejectassetId");

            // Listen for when the modal is shown
            Modal.addEventListener("show.bs.modal", function (event) {
                // Get the button that triggered the modal
                const button = event.relatedTarget;

                // Extract the asset ID from the data-asset-id attribute
                const assetId = button.getAttribute("data-asset-id");

                // Populate the Asset Tag field in the modal
                assetTagInput.value = assetId;
            });
        });
    </script>

</div>

@section Scripts {
    <script>
            document.addEventListener("DOMContentLoaded", function () {
            // Get the modal and the asset tag input field
            const Modal = document.getElementById("recieveModal");
            const movementIdInput = document.getElementById("movementId");
            const assetTagInput = document.getElementById("assetTag");

            // Listen for when the modal is shown
            Modal.addEventListener("show.bs.modal", function (event) {
                // Get the button that triggered the modal
                const button = event.relatedTarget;

                // Extract the asset ID from the data-asset-id attribute
                const assetId = button.getAttribute("data-asset-tag");
                const movementId = button.getAttribute("data-movement-id");



                // Populate the Asset Tag field in the modal
                assetTagInput.value = assetId;
                movementIdInput.value = movementId;
            });
        });
            $(document).ready(function () {
                $('#receptionHistory').DataTable({
                    // Optional: customize page length, language, etc.
                    pageLength: 10
                });
            });
            $(document).ready(function () {
                $('#pendingReception').DataTable({
                    // Optional: customize page length, language, etc.
                    pageLength: 10
                });
            });
           
    </script>
}