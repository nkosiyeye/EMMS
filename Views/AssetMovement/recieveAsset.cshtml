<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm Rejection Form</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="rejectAsset" asp-controller="AssetMovement" method="post">
                    <div class="row mb-3">
                        <!-- Date -->
                        <div class="col-md-6">
                            <label for="rejectedDate" class="form-label required-field">Date Rejected</label>
                            <input asp-for="MoveAsset.DateRejected" type="date" class="form-control" id="movementDate" required>
                        </div>
                        <!-- Asset Name / Tag -->
                        <div class="col-md-6">
                            <label for="rejectassetId" class="form-label required-field">Asset Name / Tag</label>
                            <input asp-for="MoveAsset.MovementId" id="rejectmovementId" type="hidden" />
                            <input type="text" value="Patient Monitor - AS-001" class="form-control" id="rejectassetId" required readonly>
                            <!-- Populate dynamically -->
                        </div>

                    </div>
                    <div class="row mb-3">

                        <div class="col-md-6">
                            <label asp-for="MoveAsset.RejectedBy" class="form-label"></label>
                            <input asp-for="MoveAsset.RejectedBy" type="hidden" class="form-control" value="@ViewBag._currentUser.UserId" readonly />
                            <input class="form-control" value="@ViewBag._currentUser.FirstName" readonly />
                        </div>


                        <!-- Reason -->
                        <div class="col-md-6">
                            <label asp-for="MoveAsset.RejectedReasonId" class="form-label required-field">Rejected Reason</label>
                            <select asp-for="MoveAsset.RejectedReasonId" class="form-select selectpicker col-md-6"
                                    data-live-search="true" asp-items="@(new SelectList(Model.Reasons, "Id", "Name"))">
                                <option selected disabled>Select Reason</option>
                            </select>
                        </div>
                        </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label asp-for="MoveAsset.Remarks" class="form-label"></label>
                            <textarea asp-for="MoveAsset.Remarks" class="form-control"></textarea>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary">Reject</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
            document.addEventListener("DOMContentLoaded", function () {
            // Get the modal and the asset tag input field
            const Modal = document.getElementById("recieveModal");
            const movementIdInput = document.getElementById("movementId");
            const assetTagInput = document.getElementById("assetTag");

            // Listen for when the modal is shown
            Modal.addEventListener("show.bs.modal", function (event) {
                // Get the button that triggered the modal
                const button = event.relatedTarget;

                // Extract the asset ID from the data-asset-id attribute
                const assetId = button.getAttribute("data-asset-tag");
                const movementId = button.getAttribute("data-movement-id");



                // Populate the Asset Tag field in the modal
                assetTagInput.value = assetId;
                movementIdInput.value = movementId;
            });
        });

                    document.addEventListener("DOMContentLoaded", function () {
                // Get the modal and the asset tag input field
                const Modal = document.getElementById("rejectModal");
                const assetTagInput = document.getElementById("rejectassetId");
                const movementIdInput = document.getElementById("rejectmovementId");

                // Listen for when the modal is shown
                Modal.addEventListener("show.bs.modal", function (event) {
                    // Get the button that triggered the modal
                    const button = event.relatedTarget;

                    // Extract the asset ID from the data-asset-id attribute
                    //const assetId = button.getAttribute("data-asset-id");
                    const assetId = button.getAttribute("data-asset-tag");
                    const movementId = button.getAttribute("data-movement-id");

                    // Populate the Asset Tag field in the modal
                    assetTagInput.value = assetId;
                    //assetTagInput.value = assetId;
                    movementIdInput.value = movementId;
                });
            });
    
            $(document).ready(function () {
                $('#receptionHistory').DataTable({
                    // Optional: customize page length, language, etc.
                    pageLength: 10
                });
            });
            $(document).ready(function () {
                $('#pendingReception').DataTable({
                    // Optional: customize page length, language, etc.
                    pageLength: 10
                });
            });
           
    </script>
}