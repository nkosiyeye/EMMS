@using EMMS.ViewModels
@model MoveAssetViewModel;
@{
    ViewData["Title"] = "Recieve Assets";
    ViewData["recieveAsset"] = "active";
    ViewData["JobMovement"] = "active";
    //var pagination = (Pagination)ViewData["Pagination"];
}


<div class="card">
    <div class="card-header">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>Asset pending receipt</span>
        </div>
    </div>
    <div class="card-body">
        <div class="table-wrapper">
            <table class="table fixed-table table-striped table-bordered table-hover" id="pendingReception">
                <thead>
                    <tr>
                        <th>Asset ID</th>
                        <th>From</th>
                        <th>Date Sent</th>
                        <th>Functional Status</th>
                        <th>Reason</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.MoveAssets is not null)
                    {
                        @foreach (var reciveAsset in Model.MoveAssets.Where(a => a.DateReceived == null && a.IsApproved))
                        {
                            <tr>
                                <td>@reciveAsset.Asset!.AssetTagNumber</td>
                                <td>@reciveAsset.From!.FacilityName</td>
                                <td>@reciveAsset.MovementDate.ToString("dd MMM yyyy")</td>
                                <td>@reciveAsset.FunctionalStatus!.Name</td>
                                <td>@reciveAsset.Reason!.Name</td>
                                <td>
                                    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#recieveModal"
                                    data-movement-id="@reciveAsset.MovementId" data-asset-tag="@reciveAsset.Asset.AssetTagNumber">
                                        Recieve
                                    </button>
                                    <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#rejectModal" data-asset-id="@reciveAsset.MovementId">
                                        Reject
                                    </button>
                                </td>
                            </tr>
                        }

                    }
                    else
                    {
                        <tr>
							<td colspan="6" class="text-center">No pending asset receipts</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>Asset receipt history</span>
        </div>
    </div>
    <div class="card-body">
        <p style="font-size: smaller;">Showing 1–10 out of 20</p>

        <div class="table-wrapper">
            <table class="table fixed-table table-striped table-bordered table-hover" id="receptionHistory">
                <thead>
                    <tr>
                        <th>Asset ID</th>
                        <th>From</th>
                        <th>Date Recieved</th>
                        <th>Functional Status</th>
                        @* <th>Recieved By</th> *@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reciveAsset in Model.MoveAssets.Where(a => a.DateReceived != null))
                    {
                        <tr>
                            <td>@reciveAsset.Asset.AssetTagNumber</td>
                            <td>@reciveAsset.From.FacilityName</td>
                            <td>@reciveAsset.DateReceived!.Value.ToString("dd MMM yyyy")</td>
                            <td>@reciveAsset.FunctionalStatus.Name</td>
                            @* <td>@reciveAsset.ReceivedBy</td> *@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


