@model EMMS.Models.MoveAssetViewModel;
@{
    ViewData["Title"] = "Move Assets";
    ViewData["moveAsset"] = "active";
    ViewData["JobMovement"] = "active";
    var pagination = (Pagination)ViewData["Pagination"];
}

<div class="card mb-12">
    <div class="card-header">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>Movement History</span>
            <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#moveModal">
                <i class="fa fa-plus me-1"></i> Move Asset
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="table-wrapper">
            <table class="table fixed-table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Asset ID</th>
                        <th>Location</th>
                        <th>Since</th>
                        <th>Functional Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movement in Model.MoveAssets)
                    {
                        <tr>
                            <td>@movement.AssetId</td>
                            <td>@movement.Facility @movement.ServicePoint</td>
                            <td>@movement.MovementDate</td>
                            <td>@movement.FunctionalStatus</td>
                            <td>
                                <a class="btn btn-sm btn-primary me-1 @(movement.DateReceived.HasValue ? "disabled-link" : "")" title="Edit">
                                    <i class="fa fa-edit"></i>
                                </a>

                                <a class="btn btn-sm btn-danger me-1 @(movement.DateReceived.HasValue ? "disabled-link" : "")" title="View">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>


        <div class="d-flex justify-content-between align-content-center">
            <p style="font-size: smaller;">
                Showing @Model.MoveAssets.Count() out of @pagination.TotalItemCount
            </p>
            <nav aria-label="Pagination">
                <ul class="pagination pagination-sm">
                    <li class="page-item @(pagination.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" href="@Url.Action("moveAsset", new { page = pagination.CurrentPage - 1 })">Previous</a>
                    </li>
                    @for (int i = 1; i <= pagination.TotalPages; i++)
                    {
                        <li class="page-item @(i == pagination.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("moveAsset", new { page = i })">@i</a>
                        </li>
                    }
                    <li class="page-item @(pagination.HasNextPage ? "" : "disabled")">
                        <a class="page-link" href="@Url.Action("moveAsset", new { page = pagination.CurrentPage + 1 })">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="moveModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Assets Registration</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="MoveAsset" asp-controller="AssetMovement" method="post">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="MoveAsset.MovementDate" class="form-label required-field"></label>
                            <input asp-for="MoveAsset.MovementDate" class="form-control" type="date" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="MoveAsset.AssetId" class="form-label required-field"></label>
                            <select asp-for="MoveAsset.AssetId" class="form-select">
                                <option selected disabled>Select Asset</option>
                                <option value="asset1">CT-Scanner - AS-002</option>
                                <option value="asset2">Patient Monitor - AS-001</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="MoveAsset.MovementType" class="form-label required-field"></label>
                            <select asp-for="MoveAsset.MovementType" id="movementType" class="form-select" onchange="toggleLocationFields()">
                                <option selected disabled>Select Movement Type</option>
                                <option value="facility">To Another Facility</option>
                                <option value="service_point">To a Service Point</option>
                            </select>
                        </div>
                        <div class="col-md-6" id="facilityField">
                            <label asp-for="MoveAsset.Facility" class="form-label required-field"></label>
                            <select asp-for="MoveAsset.Facility" class="form-select">
                                <option selected disabled>Select Facility</option>
                                <option value="facility1">Mbabane Hospital</option>
                                <option value="facility2">Siteki Clinic</option>
                            </select>
                        </div>
                        <div class="col-md-6 d-none" id="servicePointField">
                            <label asp-for="MoveAsset.ServicePoint" class="form-label required-field"></label>
                            <select asp-for="MoveAsset.ServicePoint" class="form-select">
                                <option selected disabled>Select Service Point</option>
                                <option value="sp1">OPD</option>
                                <option value="sp2">Pharmacy</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="MoveAsset.Reason" class="form-label"></label>
                            <select asp-for="MoveAsset.Reason" class="form-select">
                                <option selected disabled>Select Reason</option>
                                <option value="down_repair">Current equipment down, needs repair</option>
                                <option value="no_longer_used">No longer use it</option>
                                <option value="initial_deployment">Initial deployment</option>
                                <option value="decommisioned">Decommisioned</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="MoveAsset.FunctionalStatus" class="form-label"></label>
                            <select asp-for="MoveAsset.FunctionalStatus" class="form-select">
                                <option selected disabled>Select Status</option>
                                <option value="working">Working</option>
                                <option value="faulty">Faulty</option>
                                <option value="decommisioned">Decommisioned</option>
                                <option value="not_tested">Not Tested</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="border rounded p-3">
                            <div class="form-check">
                                <input asp-for="MoveAsset.IsApproved" class="form-check-input" type="checkbox" />
                                <label asp-for="MoveAsset.IsApproved" class="form-check-label fw-bold"></label>
                                <div class="form-text text-muted">
                                    Was this asset Approved for Transfer?
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit Movement</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
    <script>
             function toggleLocationFields() {
                const movementType = document.getElementById("movementType").value;
                const facilityField = document.getElementById("facilityField");
                const servicePointField = document.getElementById("servicePointField");

                if (movementType === "facility") {
                    facilityField.classList.remove("d-none");
                servicePointField.classList.add("d-none");
                } else if (movementType === "service_point") {
                    facilityField.classList.add("d-none");
                servicePointField.classList.remove("d-none");
                }
        }
    </script>
</div>
