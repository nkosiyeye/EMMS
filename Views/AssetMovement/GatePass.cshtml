@model EMMS.Models.MoveAsset

@{
    Layout = null; 
}

<!DOCTYPE html>
<html>
<head>
    <title>Gate Pass</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
    body {
        font-family: Arial, sans-serif;
    }
    .gate-pass {
        max-width: 600px;
        margin: 0 auto;
        border: 1px solid #333;
        padding: 24px;
    }
    .gate-pass h2 {
        text-align: center;
    }
    .gate-pass table {
        width: 100%;
        margin-top: 16px;
    }
    .gate-pass th, .gate-pass td {
        text-align: left;
        padding: 4px;
    }
    .print-btn {
        display: none;
    }

        .signature-box {
            border-top: 2px solid #2c3e50;
            margin-top: 30px;
            padding-top: 10px;
            text-align: center;
        }

        .stamp-box {
            border: 2px dashed #6c757d;
            height: 120px;
            border-radius: 8px;
            background: repeating-linear-gradient( 45deg, transparent, transparent 10px, rgba(108, 117, 125, 0.05) 10px, rgba(108, 117, 125, 0.05) 20px );
        }

        .watermark {
            position: absolute;
            top: 30%;
            left: 50%;
            transform: translate(-50%, -50%) rotate(-45deg);
            font-size: 3rem;
            color: rgba(52, 152, 219, 0.05);
            font-weight: bold;
            z-index: 0;
            pointer-events: none;
        }
    /* @@media print {
        .print-btn {
            display: none;
        }
    } */
</style>

</head>
<body>
    <div class="gate-pass">
        <div class="text-center mb-3">
            <img src="~/images/Coat_of_arms_of_Eswatini.svg" alt="Ministry Coat of Arms" style="width: 60px; height: 60px;">
        </div>
        <h2>EMMS Gate Pass</h2>
        <!-- Watermark -->
        <div class="watermark">AUTHORIZED</div>
        <table>
            <tr>
                <th>Asset Tag:</th>
                <td>@Model.Asset?.AssetTagNumber</td>
            </tr>
            <tr>
                <th>Movement Date:</th>
                <td>@Model.MovementDate.ToString("yyyy-MM-dd")</td>
            </tr>
            <tr>
                <th>From:</th>
                <td>@Model.From?.FacilityName</td>
            </tr>
            <tr>
                <th>To:</th>
                <td>@Model.Facility?.FacilityName</td>
            </tr>
            <tr>
                <th>Functional Status:</th>
                <td>@Model.FunctionalStatus</td>
            </tr>
        </table>
        <div class="row mt-2">
            <div class="col-md-6">
                <div class="text-center p-3 border rounded">
                    <h6 class="text-primary mb-3">
                        <i class="fas fa-user-tie me-2"></i>AUTHORIZED BY
                    </h6>
                    <div class="mb-3">
                        <strong class="fs-5">@Model.ApprovedUser.FirstName @Model.ApprovedUser.LastName</strong>
                        <div class="text-muted">@Model.ApprovedUser.Designations.Name</div>
                        <small class="text-muted">@Model.ApprovedUser.UserRole.Name</small>
                    </div>
                    <div class="signature-box">
                        <small class="text-muted fst-italic">Authorized Signature & Date</small>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="text-center p-3 border rounded">
                    <h6 class="text-primary mb-3">
                        <i class="fas fa-stamp me-2"></i>OFFICIAL VALIDATION
                    </h6>
                    <div class="stamp-box d-flex align-items-center justify-content-center">
                        <div class="text-center text-muted">
                            <i class="fas fa-stamp fa-3x opacity-25 mb-2"></i>
                            <div>Official Seal Here</div>
                        </div>
                    </div>
                    <small class="text-muted mt-2 d-block">Official Stamp</small>
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <!-- Important Notice -->
            <div class="alert alert-warning mt-4 border-0" style="background: linear-gradient(45deg, #fff3cd, #ffeaa7);">
                <div class="d-flex align-items-start">
                    <i class="fas fa-exclamation-triangle text-warning me-3 mt-1"></i>
                    <div>
                        <h6 class="alert-heading mb-2">Important Instructions</h6>
                        <ul class="mb-0 small">
                            <li>This gate pass is valid for <strong>single use only</strong></li>
                            <li>Asset must be accompanied by this document during movement</li>
                            <li>Any alteration or tampering will void this authorization</li>
                            <li>Present this pass to security personnel upon request</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

