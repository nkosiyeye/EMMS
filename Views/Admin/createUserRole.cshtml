@model EMMS.Models.Admin.UserRole

@{
    ViewData["Title"] = "Create User Role";
}

<div class="container">
    <div class="d-flex justify-content-center">
        <div class="card col-md-10 mb-6">
            <div class="card-header">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>Create User Role</span>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["Error"] != null)
                {
                    <div class="row alert alert-danger d-flex align-items-center alert-dismissible fade show" role="alert">
                        @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <form asp-controller="Admin" asp-action="createUserRole" method="post">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="UserType" class="form-label required-field">User Type</label>
                            <select asp-for="UserType" class="form-select">
                                <option value="1">General User</option>
                                <option value="2">Facility Manager</option>
                                <option value="3">Administrator</option>
                                <option value="4">Biomed</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Name" class="form-label required-field">Role Name</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label required-field">Description</label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <label asp-for="AssetManagement" class="form-label">Asset Management Permission</label>
                            <select asp-for="AssetManagement" class="form-select">
                                <option value="1">Read</option>
                                <option value="2">Read & Write</option>
                                <option value="3">None</option>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="AssetMovement" class="form-label">Asset Movement Permission</label>
                            <select asp-for="AssetMovement" class="form-select">
                                <option value="1">Read</option>
                                <option value="2">Read & Write</option>
                                <option value="3">None</option>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="WorkRequest" class="form-label">Work Request Permission</label>
                            <select asp-for="WorkRequest" class="form-select">
                                <option value="1">Read</option>
                                <option value="2">Read & Write</option>
                                <option value="3">None</option>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="JobManagement" class="form-label">Job Management Permission</label>
                            <select asp-for="JobManagement" class="form-select">
                                <option value="1">Read</option>
                                <option value="2">Read & Write</option>
                                <option value="3">None</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="ApproveAssetMovement" class="form-check-input" type="checkbox" />
                        <label asp-for="ApproveAssetMovement" class="form-check-label">Can Approve Asset Movement</label>
                    </div>

                    <div class="mb-3">
                        <label asp-for="RowState" for="RowState" class="form-label">Status</label>
                        <select asp-for="RowState" class="form-select" id="RowState">
                            <option value="1" selected>Active</option>
                            <option value="2">Inactive</option>
                            <option value="0">Deleted</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary">Create Role</button>
                </form>
            </div>
        </div>
    </div>
</div>

