@{
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
    var registrationError = TempData["RegistrationError"] as string;
}

@if (!string.IsNullOrEmpty(success))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" id="notification-popup">
        @success
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (!string.IsNullOrEmpty(error))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert" id="notification-popup">
        @error
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (!string.IsNullOrEmpty(registrationError))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert" id="notification-popup">
        @registrationError
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
