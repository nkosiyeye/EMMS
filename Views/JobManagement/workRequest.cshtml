@using EMMS.ViewModels
@model WorkRequestViewModel
@{
    ViewData["Title"] = "Move Assets";
    ViewData["workRequest"] = "active";
    ViewData["JobManagement"] = "active";
}

<div class="card mb-12">
    <div class="card-header">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>Create Work Request</span>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["Error"] != null)
        {
            <div class="row alert alert-primary d-flex align-items-center alert-dismissible fade show" role="alert">
                <div>
                    <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Info:"><use xlink:href="#info-fill" /></svg>
                    <div>
                        @TempData["Error"]
                    </div>
                </div>

                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>

        }
        <form asp-action="WorkRequest" asp-controller="JobManagement" method="post">
            <div class="row mb-2">

                <!-- Date -->
                <div class="col-md-3">
                    <label asp-for="WorkRequest.RequestDate" for="requestDate" class="form-label required-field">Request Date</label>
                    <input asp-for="WorkRequest.RequestDate" type="date" class="form-control" id="requestDate" required>
                    <span asp-validation-for="WorkRequest.RequestDate" class="text-danger"></span>
                </div>

                <!-- Asset Name / Tag -->
                <div class="col-md-3">
                    <label asp-for="WorkRequest.AssetId" class="form-label required-field"></label>
                    <input asp-for="WorkRequest.AssetId" class="form-control" type="Guid" hidden />
                    <input class="form-control" type="text" value="@Model.AssetTag" disabled />
                </div>

                <!-- Title -->
                <div class="col-md-3">
                    <label asp-for="WorkRequest.FaultReportId" for="title" class="form-label required-field"></label>
                    <select asp-for="WorkRequest.FaultReportId" id="movementType" class="form-select selectpicker col-md-6"
                    data-live-search="true" asp-items="@(new SelectList(Model.FaultReports, "Id", "Name"))">
                        <option selected disabled>Select Fault Report</option>
                    </select>
                    <span asp-validation-for="WorkRequest.FaultReportId" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="WorkRequest.WorkStatusId" for="title" class="form-label required-field"></label>
                    <select asp-for="WorkRequest.WorkStatusId" id="movementType" class="form-select selectpicker col-md-6"
                    data-live-search="true" @*asp-items="@(new SelectList(Model.WorkStatuses, "Id", "Name"))" *@>
                        @foreach (var status in Model.WorkStatuses.Where(w => w.Name == "Open"))
                        {
                            <option value="@status.Id" selected>@status.Name</option>                            
                        }
                    </select>
                    <span asp-validation-for="WorkRequest.WorkStatusId" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-12 mb-2">
                <label asp-for="WorkRequest.Description" for="faultDescription" class="form-label required-field">Fault Description</label>
                <textarea asp-for="WorkRequest.Description" class="form-control" id="faultDescription" rows="2" placeholder="Brief description of the problem"></textarea>
                <span asp-validation-for="WorkRequest.Description" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Request</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

