@{
    ViewData["Title"] = "Move Assets";
    ViewData["workRequest"] = "active";
    ViewData["JobManagement"] = "active";
}

<div class="card mb-12">
    <div class="card-header">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>Work Requests</span>
            <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#requestModal">
                <i class="fa fa-plus me-1"></i> Request
            </button>
        </div>
    </div>
    <div class="card-body">
        <p style="font-size: smaller;">Showing 1–10 out of 20</p>

        <div class="table-wrapper">
            <table class="table fixed-table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Asset ID</th>
                        <th>Date</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Outcome</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>AS-001</td>
                        <td>29 Apr 2025</td>
                        <td>Working</td>
                        <td>Lorem ipsum dolor...</td>
                        <td>Pending</td>
                        <td>-</td>
                        <td>
                            <a class="btn btn-sm btn-primary me-1" title="Edit">
                                <i class="fa fa-edit"></i>
                            </a>

                            <a asp-controller="JobManagement" asp-action="jobCard" class="btn btn-sm btn-info me-1" title="View">
                                <i class="fa fa-eye"></i>
                            </a>

                            <a class="btn btn-sm btn-danger me-1" title="Close Job" data-bs-toggle="modal" data-bs-target="#closeModal">
                                Close Request
                            </a>
                         </td>
                    </tr>
                    <tr>
                        <td>AS-001</td>
                        <td>29 Apr 2025</td>
                        <td>Working</td>
                        <td>Lorem ipsum dolor...</td>
                        <td>Pending(External)</td>
                        <td>-</td>
                        <td>
                            <a class="btn btn-sm btn-primary me-1" title="Edit">
                                <i class="fa fa-edit"></i>
                            </a>


                            <a asp-controller="JobManagement" asp-action="externaljobCard" class="btn btn-sm btn-info me-1" title="View">
                                <i class="fa fa-eye"></i>
                            </a>

                            <a class="btn btn-sm btn-danger me-1" title="Close Job" data-bs-toggle="modal" data-bs-target="#closeModal">
                                Close Request
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <nav aria-label="Pagination">
            <ul class="pagination pagination-sm">
                <li class="page-item disabled"><a class="page-link">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item active" aria-current="page"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </nav>
    </div>
</div>
<!-- Request Modal -->
<div class="modal fade" id="requestModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Work Request</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row mb-2">

                        <!-- Date -->
                        <div class="col-md-4">
                            <label for="requestDate" class="form-label required-field">Request Date</label>
                            <input type="date" class="form-control" id="requestDate" required>
                        </div>

                        <!-- Asset Name / Tag -->
                        <div class="col-md-4">
                            <label for="assetTag" class="form-label required-field">Asset Name / Tag</label>
                            <select class="form-select" id="assetTag" required>
                                <option selected disabled>Select Asset</option>
                                <option value="asset1">CT-Scanner - AS-002</option>
                                <option value="asset2">Patient Monitor - AS-001</option>
                            </select>
                        </div>

                        <!-- Title -->
                        <div class="col-md-4">
                            <label for="title" class="form-label required-field">Title</label>
                            <select class="form-select" id="title" required>
                                <option selected disabled>Select Title</option>
                                <option selected disabled>Electrical Fault</option>
                                <option selected disabled>Maintenance</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-12 mb-2">
                        <label for="faultDescription" class="form-label required-field">Fault Description</label>
                        <textarea class="form-control" id="faultDescription" rows="2" placeholder="Brief description of the problem"></textarea>
                    </div>

                    <div class="col-md-6 mb-2">
                        <div class="border rounded p-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="externalCheck">
                                <label class="form-check-label fw-bold" for="externalCheck">
                                    External
                                </label>
                                <div class="form-text text-muted">
                                    is this asset maintained by an external service provider?
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary">Request</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="closeModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Close Work Request</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row mb-3">
                        <!-- Date -->
                        <div class="col-md-6">
                            <label for="rejectedDate" class="form-label required-field">Date Rejected</label>
                            <input type="date" class="form-control" id="movementDate" required>
                        </div>


                        <!-- Outcome -->
                        <div class="col-md-6">
                            <label for="outcome" class="form-label required-field">Outcome</label>
                            <select class="form-select" id="outcome" required>
                                <option selected disabled>Select Outcome</option>
                                <option value="resolved">Resolved</option>
                                <option value="not-resolved">not Resolved</option>
                                <option value="completed">Completed</option>
                            </select>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary">Recieve</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>