@model EMMS.ViewModels.JobViewModel;
@{
    ViewData["Title"] = "Manage Jobs";
    ViewData["manageJob"] = "active";
    ViewData["JobManagement"] = "active";
    Model.Job.StartDate = DateTime.Today;
}


<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><strong>Job Management</strong></span>
    </div>
    <div class="card-body">

        <!-- Work Requests Table -->
        <div class="card mb-3">
            <div class="card-header">
                <strong>Work Requests</strong>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table fixed-table table-striped table-bordered table-hover" id="workRequestTable">
                        <thead class="table-dark">
                            <tr>
                                <th>Asset Tag</th>
                                <th>Date Requested</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model.WorkRequests.Where(w => w.WorkStatus?.Name == "Open"))
                            {
                                <tr>
                                    <td>@request.Asset?.AssetTagNumber</td>
                                    <td>@request.RequestDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(request.Description) && request.Description.Length > 20)
                                        {
                                            <span title="@request.Description">@request.Description.Substring(0, 20)...</span>
                                            <a href="javascript:void(0);" class="text-info read-more"
                                               data-bs-toggle="modal"
                                               data-bs-target="#descriptionModal"
                                               data-description="@request.Description">
                                                Read More
                                            </a>
                                        }
                                        else
                                        {
                                            <span>@request.Description</span>
                                        }
                                    </td>
                                    <td>@request.WorkStatus?.Name</td>
                                    <td>
                                        <div class="btn-group">
                                            <button class="btn btn-primary btn-sm"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#jobModal"
                                                    data-request-id="@request.WorkRequestId"
                                                    data-asset-id="@request.AssetId"
                                                    data-asset-tag="@request.Asset?.AssetTagNumber">
                                                Create Job
                                            </button>
                                            <button class="btn btn-danger btn-sm"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#cancelModal">
                                                Cancel
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Job History Table -->
        <div class="card mt-3">
            <div class="card-header">
                <strong>Job History</strong>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table fixed-table table-striped table-bordered table-hover" id="JobTable">
                        <thead class="table-dark">
                            <tr>
                                <th>Asset Tag</th>
                                <th>Start Date</th>
                                <th>Fault Report</th>
                                <th>Assigned To</th>
                                <th>External Provider</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var job in Model.Jobs)
                            {
                                <tr>
                                    <td>@job.Asset?.AssetTagNumber</td>
                                    <td>@job.StartDate.ToString("dd/MM/yyyy")</td>
                                    <td>@job.FaultReport?.Name</td>
                                    <td>@job.User?.FirstName</td>
                                    <td>
                                        @(job.IsExternalProvider
                                            ? job.ExternalProvider?.Name ?? "<span class='text-muted'>External</span>"
                                            : "No")
                                    </td>
                                    <td>@job.Status?.Name</td>
                                    <td>
                                        <a class="btn btn-sm btn-info"
                                           asp-controller="JobManagement"
                                           asp-action="@(job.IsExternalProvider ? "externalJobCard" : "jobCard")"
                                           asp-route-id="@job.JobId"
                                           title="View Job">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>



<!-- Job Card Modal -->
<div class="modal fade" id="jobModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Create Job</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="createJobCard" asp-controller="JobManagement" method="post">
                    <div class="row mb-3">
                        <!-- Date -->
                        <div class="col-md-4">
                            <label asp-for="Job.StartDate" for="jobDate" class="form-label">Date</label>
                            <input asp-for="Job.StartDate" type="date" class="form-control" id="jobDate" required>
                        </div>
                        <!-- Asset Name / Tag -->
                        <div class="col-md-4">
                            <label for="assetTag" class="form-label required-field">Asset Tag</label>
                            <input asp-for="Job.WorkRequestId" id="requestId" type="hidden" />
                            <input asp-for="Job.AssetId" id="assetId" type="hidden"/>
                            <input readonly type="text" class="form-control" id="assetTag">
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Job.StatusId" for="title" class="form-label required-field"></label>
                            <input class="form-control" type="text" value="@Model.WorkStatuses.FirstOrDefault(w => w.Name == "In Progress").Name" disabled />
                            <select asp-for="Job.StatusId" id="movementType" class="form-select selectpicker col-md-6 d-none"
                            data-live-search="true" @*asp-items="@(new SelectList(Model.WorkStatuses, "Id", "Name"))"*@>
                                @foreach (var status in Model.WorkStatuses!.Where(w => w.Name == "In Progress"))
                                {
                                    <option value="@status.Id" selected>@status.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <!-- Fault Report -->
                        <div class="col-md-6">
                            <label asp-for="Job.FaultReportId" for="title" class="form-label required-field"></label>
                            <select asp-for="Job.FaultReportId" id="movementType" class="form-select selectpicker col-md-6"
                            data-live-search="true" asp-items="@(new SelectList(Model.FaultReports, "Id", "Name"))">
                                <option selected disabled>Select Fault Report</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Job.AssignedTo" for="assignedTo" class="form-label">Assigned To</label>
                            @if (ViewBag._currrentUserRole.UserType == Enumerators.UserType.Administrator)
                            {
                                <select asp-for="Job.AssignedTo" class="form-select" id="assignedTo" asp-items="ViewBag.Biomed" required>
                                </select>

                            }
                            else
                            {
                                    <input asp-for="Job.AssignedTo" value="@ViewBag._currentUser.UserId" id="requestId" type="hidden" />
                                <input readonly type="text" class="form-control" id="assignedTo" value="@ViewBag._currentUser.FirstName">
                               
                            }
                        </div>
                    </div>


                    <div class="row col-md-12 mb-2">
                        <div class="border rounded p-3">
                            <div class="form-check">
                                <input asp-for="Job.IsExternalProvider" class="form-check-input" type="checkbox" id="externalCheck" onchange="checkExternal(this)">
                                <label asp-for="Job.IsExternalProvider" class="form-check-label fw-bold" for="externalCheck">
                                    External
                                </label>
                                <div class="form-text text-muted">
                                    is this request attended by an external service provider?
                                </div>
                            </div>

                            <div class="col-md-8 d-none" id="external-field-container">
                                <label asp-for="Job.ExternalProviderId" class="form-label required-field"></label>
                                <select asp-for="Job.ExternalProviderId" id="service-provider" class="form-select selectpicker col-md-6" data-live-search="true" asp-items="@(new SelectList(Model.ServiceProviders, "Id", "Name"))">
                                    <option selected disabled>Select Service Provider</option>
                                </select>
                                @* <span asp-validation-for="MoveAsset.AssetId" class="text-danger"></span> *@
                            </div>
                        </div>
                    </div>


                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary">Start Job</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
    <script>
        function checkExternal(checkbox) {
              const externalField = document.getElementById('external-field-container');
              if (checkbox.checked) {
                  externalField.classList.remove('d-none');
              } else {
                  externalField.classList.add('d-none');
              }
          }
    </script>
</div>

@section Scripts {
    <script>
            $(document).ready(function () {
            $('#workRequestTable').DataTable({
                    pageLength: 10
                });
            });

         $(document).ready(function () {
        $('#JobTable').DataTable({
                pageLength: 10
            });
        });
        document.addEventListener("DOMContentLoaded", function () {
            // Get the modal and the asset tag input field
            const Modal = document.getElementById("jobModal");
            const assetIdInput = document.getElementById("assetId");
            const requsetIdInput = document.getElementById("requestId");
            const assetTagInput = document.getElementById("assetTag");

            // Listen for when the modal is shown
            Modal.addEventListener("show.bs.modal", function (event) {
                // Get the button that triggered the modal
                const button = event.relatedTarget;

                // Extract the asset ID from the data-asset-id attribute
                const assetId = button.getAttribute("data-asset-id");
                const assetTag = button.getAttribute("data-asset-tag");
                const requestId = button.getAttribute("data-request-id");



                // Populate the Asset Tag field in the modal
                assetTagInput.value = assetTag;
                assetIdInput.value = assetId;
                requsetIdInput.value = requestId;
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
