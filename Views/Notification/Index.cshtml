@{
	ViewData["Title"] = "Notifications";
	ViewData["Notification"] = "active";
}

<div class="card">
	<div class="card-header">
		<div class="card-header d-flex justify-content-between align-items-center">
			<span>Notifications</span>
		</div>
	</div>
	<div class="card-body">

		<div class="notification-body">
			<ul class="notification-list" id="notificationList">
				<li class="notification-item">

					<div class="notification-icon success">
						<i class="fas fa-toolbox"></i>
					</div>
					<div class="notification-content">
						<p class="notification-message">New work request submitted.</p>
						<span class="notification-time">2 minutes ago</span>
					</div>
					<div class="notification-actions">
						<a class="notification-action mark-read" title="view" asp-controller="JobManagement" asp-action="workRequest">
							<i class="fas fa-eye"></i>
						</a>
					</div>
				</li>
				<li class="notification-item">

					<div class="notification-icon info">
						<i class="fas fa-box-open"></i>
					</div>
					<div class="notification-content">
						<p class="notification-message">New Asset added to inventory.</p>
						<span class="notification-time">1 hour ago</span>
					</div>
					<div class="notification-actions">
						<a class="notification-action mark-read" title="view" asp-controller="AssetManagement" asp-action="Index">
							<i class="fas fa-eye"></i>
						</a>
					</div>
				</li>
			</ul>
			<div class="empty-notifications d-none" id="emptyNotifications">
				<i class="fas fa-bell-slash fa-2x mb-3"></i>
				<p>No notifications yet</p>
			</div>
		</div>
	</div>
</div>
