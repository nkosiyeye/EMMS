@{
    ViewData["Title"] = "Home Page";
    ViewData["active"] = "active";
}

<!-- Dashboard Header -->
<div class="card mb-4">
    <div class="card-header">
        <h4>Dashboard</h4>
    </div>
</div>

<!-- Dummy Dashboard Content -->
<div class="row">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-header bg-info text-white">
                Total Assets
            </div>
            <div class="card-body">
                <h5 class="card-title">150</h5>
                <p class="card-text">Assets currently being tracked.</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-header bg-danger text-white">
                Decommisioned Assets
            </div>
            <div class="card-body">
                <h5 class="card-title">15</h5>
                <p class="card-text">Assets that have been Decommisioned.</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-header bg-success text-white">
                Completed Jobs
            </div>
            <div class="card-body">
                <h5 class="card-title">120</h5>
                <p class="card-text">Jobs successfully completed.</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-header bg-warning text-white">
                Pending Jobs
            </div>
            <div class="card-body">
                <h5 class="card-title">15</h5>
                <p class="card-text">Jobs awaiting approval or action.</p>
            </div>
        </div>
    </div>
</div>


