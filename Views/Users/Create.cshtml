@model EMMS.Models.Admin.User

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="d-flex justify-content-center">
        <div class="card col-md-6 mb-6">
            <div class="card-header">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>Add User</span>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <!-- Personal Information Section -->
                    <h5 class="mb-3">Personal Information</h5>
                    <div class="form-group mb-2">
                        <label asp-for="FirstName" class="control-label">First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="MiddleName" class="control-label">Middle Name</label>
                        <input asp-for="MiddleName" class="form-control" />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="LastName" class="control-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-4">
                            <label asp-for="DOB" class="control-label">Date of Birth</label>
                            <input asp-for="DOB" type="date" class="form-control" />
                            <span asp-validation-for="DOB" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Gender" class="control-label">Gender</label>
                            <select asp-for="Gender" class="form-control">
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Cellphone" class="control-label">Cellphone</label>
                            <input asp-for="Cellphone" class="form-control" />
                            <span asp-validation-for="Cellphone" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Employment Details -->
                    <h5 class="mt-4 mb-3">Employment Details</h5>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="DesignationId" class="control-label">Designation</label>
                            <select asp-for="DesignationId" class="form-control" asp-items="ViewBag.DesignationId">
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="FacilityId" class="control-label">Facility</label>
                            <select asp-for="FacilityId" class="form-control" asp-items="ViewBag.FacilityId">
                            </select>
                        </div>
                    </div>

                    <!-- Account Credentials -->
                    <h5 class="mt-4 mb-3">Account Credentials</h5>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Username" class="control-label">Username</label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Password" class="control-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="UserRoleId" class="control-label">User Role</label>
                        <select asp-for="UserRoleId" class="form-control" asp-items="ViewBag.UserRoleId">
                        </select>
                    </div>

                    <!-- Audit Information -->
                    @* <h5 class="mt-4 mb-3">Audit Information</h5> *@
                    <div class="row d-none">
                        <div class="form-group col-md-6">
                            <label asp-for="CreatedBy" class="control-label">Created By</label>
                            <input asp-for="CreatedBy" class="form-control" />
                            <span asp-validation-for="CreatedBy" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="DateCreated" class="control-label">Date Created</label>
                            <input asp-for="DateCreated" type="datetime-local" value="@DateTime.Now" class="form-control" />
                            <span asp-validation-for="DateCreated" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row d-none">
                        <div class="form-group col-md-6">
                            <label asp-for="ModifiedBy" class="control-label">Modified By</label>
                            <input asp-for="ModifiedBy" class="form-control" />
                            <span asp-validation-for="ModifiedBy" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="DateModified" class="control-label">Date Modified</label>
                            <input asp-for="DateModified" type="datetime-local" class="form-control" />
                            <span asp-validation-for="DateModified" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="RowState" class="control-label">Record State</label>
                        <select asp-for="RowState" class="form-control">
                            <option value="1" selected>Active</option>
                            <option value="2">Inactive</option>
                            <option value="0">Deleted</option>
                        </select>
                        <span asp-validation-for="RowState" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group mt-4">
                        <input type="submit" value="Create" class="btn btn-primary btn-block" />
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
