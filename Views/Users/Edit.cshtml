@model EMMS.Models.Admin.User

@{
    ViewData["Title"] = "Edit";
    var isAdmin = ViewBag._currrentUserRole.UserType == Enumerators.UserType.Administrator;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">
            <div class="card rounded-4">
                <!-- Header -->
                <div class="card-header bg-primary text-white rounded-top-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="mb-0"><i class="bi bi-person-lines-fill me-2"></i> User Details</span>
                        <a asp-action="Index" class="btn btn-sm btn-light">
                            <i class="bi bi-arrow-left"></i> Back
                        </a>
                    </div>
                </div>

                <!-- Body -->
                <div class="card-body p-4">
                    @if (TempData["UserEditError"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <div>@TempData["UserEditError"]</div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="Edit" asp-controller="Users" method="post" class="needs-validation">
                        <input type="hidden" asp-for="UserId" />

                        <!-- Personal Information -->
                        <h5 class="border-bottom pb-2 mb-3 text-primary">Personal Information</h5>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="FirstName" class="form-label">First Name</label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="MiddleName" class="form-label">Middle Name</label>
                                <input asp-for="MiddleName" class="form-control" />
                                <span asp-validation-for="MiddleName" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="LastName" class="form-label">Last Name</label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-3 mt-2">
                            <div class="col-md-4">
                                <label asp-for="DOB" class="form-label">Date of Birth</label>
                                <input asp-for="DOB" type="date" value="@Model.DOB.ToString("yyyy-MM-dd")" class="form-control" />
                                <span asp-validation-for="DOB" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Gender" class="form-label">Gender</label>
                                <select asp-for="Gender" class="form-select">
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Cellphone" class="form-label">Cellphone</label>
                                <input asp-for="Cellphone" class="form-control" />
                                <span asp-validation-for="Cellphone" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Employment Details -->
                        <h5 class="border-bottom pb-2 mt-4 mb-3 text-primary">Employment Details</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="DesignationId" class="form-label">Designation</label>
                                @if (isAdmin)
                                {
                                    <select asp-for="DesignationId" class="form-select" asp-items="ViewBag.DesignationId"></select>
                                }
                                else
                                {
                                    <select asp-for="DesignationId" class="form-select" asp-items="ViewBag.DesignationId" disabled></select>
                                    <input type="hidden" asp-for="DesignationId" />
                                }
                            </div>
                            <div class="col-md-6">
                                <label asp-for="FacilityId" class="form-label">Facility</label>
                                @if (isAdmin)
                                {
                                    <select asp-for="FacilityId" class="form-select" asp-items="ViewBag.FacilityId"></select>
                                }
                                else
                                {
                                    <select asp-for="FacilityId" class="form-select" asp-items="ViewBag.FacilityId" disabled></select>
                                    <input type="hidden" asp-for="FacilityId" />
                                }
                            </div>
                        </div>

                        <!-- Account Credentials -->
                        <h5 class="border-bottom pb-2 mt-4 mb-3 text-primary">Account Credentials</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Username" class="form-label">Username</label>
                                @if (isAdmin)
                                {
                                    <input asp-for="Username" class="form-control" />
                                }
                                else
                                {
                                    <input asp-for="Username" class="form-control" readonly />
                                }
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="UserRoleId" class="form-label">User Role</label>
                                @if (isAdmin)
                                {
                                    <select asp-for="UserRoleId" class="form-select" asp-items="ViewBag.UserRoleId"></select>
                                }
                                else
                                {
                                    <select asp-for="UserRoleId" class="form-select" asp-items="ViewBag.UserRoleId" disabled></select>
                                    <input type="hidden" asp-for="UserRoleId" />
                                }
                            </div>
                        </div>

                        <div class="mt-3">
                            <div class="border rounded p-3">
                                <div class="form-check mb-2">
                                    <input type="checkbox" class="form-check-input" id="change-password-checkbox" onchange="togglePasswordField(this)">
                                    <label for="change-password-checkbox" class="form-check-label fw-bold">Change Password?</label>
                                </div>
                                <div id="password-field-container" class="d-none">
                                    <label asp-for="Password" class="form-label">Password</label>
                                    <input asp-for="Password" id="password-input" type="password" class="form-control" value="" />
                                </div>
                            </div>
                        </div>

                        <!-- Record State -->
                        <h5 class="border-bottom pb-2 mt-4 mb-3 text-primary">System Settings</h5>
                        <div class="form-group mb-3">
                            <label asp-for="RowState" class="form-label">Record State</label>
                            @if (isAdmin)
                            {
                                <select asp-for="RowState" class="form-select">
                                    <option value="1">Active</option>
                                    <option value="2">Inactive</option>
                                    <option value="0">Deleted</option>
                                </select>
                            }
                            else
                            {
                                <select asp-for="RowState" class="form-select" disabled>
                                    <option value="1">Active</option>
                                    <option value="2">Inactive</option>
                                    <option value="0">Deleted</option>
                                </select>
                                <input type="hidden" asp-for="RowState" />
                            }
                            <span asp-validation-for="RowState" class="text-danger"></span>
                        </div>

                        <!-- Submit -->
                        <div class="d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save me-1"></i> Update
                            </button>
                        </div>
                    </form>
                </div> <!-- end card-body -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePasswordField(checkbox) {
            const container = document.getElementById('password-field-container');
            if (checkbox.checked) {
                container.classList.remove('d-none'); // Show field
            } else {
                container.classList.add('d-none'); // Hide field
            }
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
