@model EMMS.Models.Admin.User
@{
    ViewData["Title"] = "User Details";
    var isAdmin = ViewBag._currrentUserRole.UserType == Enumerators.UserType.Administrator;
}

<div class="container mt-4">
    <!-- User Details Card -->
    <div class="card border shadow-sm">
        <!-- Header -->
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="mb-0">@Model.FirstName @Model.LastName</h6>
                @if (Model.RowState.ToString() == "Active")
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">@Model.RowState</span>
                }
            </div>
        </div>

        <!-- Body -->
        <div class="card-body">
            <div class="row">
                <!-- Personal Details -->
                <div class="col-md-6 mb-4">
                    <h6 class="text-primary border-bottom pb-2">Personal Information</h6>
                    <table class="table table-sm table-borderless border-bottom">
                        <tr>
                            <td class="text-muted" style="width: 40%;">First Name:</td>
                            <td class="fw-medium">@Model.FirstName</td>
                        </tr>
                        <tr>
                            <td class="text-muted">Middle Name:</td>
                            <td class="fw-medium">@(Model.MiddleName ?? "N/A")</td>
                        </tr>
                        <tr>
                            <td class="text-muted">Last Name:</td>
                            <td class="fw-medium">@Model.LastName</td>
                        </tr>
                        <tr>
                            <td class="text-muted">Date of Birth:</td>
                            <td class="fw-medium">@Model.DOB.ToString("dd MMM yyyy")</td>
                        </tr>
                        <tr>
                            <td class="text-muted">Gender:</td>
                            <td class="fw-medium">@Model.Gender</td>
                        </tr>
                        <tr>
                            <td class="text-muted">Cellphone:</td>
                            <td class="fw-medium">@Model.Cellphone</td>
                        </tr>
                    </table>
                </div>

                <!-- System Details -->
                <div class="col-md-6 mb-4">
                    <h6 class="text-primary border-bottom pb-2">System Information</h6>
                    <table class="table table-sm table-borderless border-bottom">
                        <tr>
                            <td class="text-muted" style="width: 40%;">Username:</td>
                            <td class="fw-medium">@Model.Username</td>
                        </tr>
                        <tr>
                            <td class="text-muted">Password:</td>
                            <td class="text-muted">••••••••</td>
                        </tr>
                        <tr>
                            <td class="text-muted">User Role:</td>
                            <td class="fw-medium">@(Model.UserRole?.UserType ?? Enumerators.UserType.GeneralUser)</td>
                        </tr>
                        <tr>
                            <td class="text-muted">Designation:</td>
                            <td class="fw-medium">@(Model.Designations?.Name ?? "N/A")</td>
                        </tr>
                        <tr>
                            <td class="text-muted">Facility ID:</td>
                            <td class="fw-medium">@(Model.Facility?.FacilityName ?? "N/A")</td>
                        </tr>
                        <tr>
                            <td class="text-muted">Status:</td>
                            <td>
                                @if (Model.RowState.ToString() == "Active")
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@Model.RowState</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            @if (isAdmin)
            {
                <!-- Audit Information -->
                <div class="row mt-3">
                    <div class="col-12">
                        <h6 class="text-primary border-bottom pb-2">Audit Trail</h6>
                        <div class="row">
                            <div class="col-md-3">
                                <small class="text-muted">Created By:</small><br>
                                @* <span class="fw-medium">@(Model.CreatedBy ?? "System")</span> *@
                            </div>
                            <div class="col-md-3">
                                <small class="text-muted">Date Created:</small><br>
                                <span class="fw-medium">@Model.DateCreated</span>
                            </div>
                            <div class="col-md-3">
                                <small class="text-muted">Modified By:</small><br>
                                @* <span class="fw-medium">@(Model.ModifiedBy ?? "N/A")</span> *@
                            </div>
                            <div class="col-md-3">
                                <small class="text-muted">Date Modified:</small><br>
                                <span class="fw-medium">@(Model.DateModified?.ToString("dd MMM yyyy HH:mm") ?? "N/A")</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Footer -->
        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">User ID: @Model.UserId</small>
                <div>
                    @* <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a> *@
                    <a asp-action="Edit" asp-route-id="@Model?.UserId" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit User
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 8px;
    }

    .card-header {
        border-radius: 8px 8px 0 0;
    }

    .table td {
        padding: 0.5rem 0;
    }

    .badge {
        font-size: 0.75rem;
    }

    h6.text-primary {
        font-weight: 600;
        margin-bottom: 1rem;
    }
</style>