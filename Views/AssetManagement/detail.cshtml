@using static EMMS.Models.Enumerators
@using EMMS.Utility
@model EMMS.ViewModels.AssetDetailViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    ViewData["Title"] = Model.Asset.AssetTagNumber;
    ViewData["asset"] = "active";
}
<script>
    const assetDetail = @Html.Raw(Json.Serialize(Model.Asset));
</script>


<!-- Asset Detail Section -->
<div class="card mb-2">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Asset Detail</span>
        <button style="font-size: small;" class="btn btn-secondary" title="Printer" onclick="printAssetDetail()">
            <i class="fa-solid fa-print"></i> Print
        </button>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <dl class="row">
                    <dt class="col-sm-6 border p-1 m-0">Asset Tag</dt>
                    <dd class="col-sm-6 border p-1 m-0">@Html.DisplayFor(model => model.Asset.AssetTagNumber)</dd>

                    <dt class="col-sm-6 border p-1 m-0">Category</dt>
                    <dd class="col-sm-6 border p-1 m-0">@Html.DisplayFor(model => model.Asset.Category!.Name)</dd>

                    <dt class="col-sm-6 border p-1 m-0">Sub Category</dt>
                    <dd class="col-sm-6 border p-1 m-0">@Html.DisplayFor(model => model.Asset.SubCategory!.Name)</dd>

                    <dt class="col-sm-6 border p-1 m-0">Item Name</dt>
                    <dd class="col-sm-6 border p-1 m-0">@Html.DisplayFor(model => model.Asset.ItemName)</dd>

                    <dt class="col-sm-6 border p-1 m-0">Created By</dt>
                    <dd class="col-sm-6 border p-1 m-0">@Html.DisplayFor(model => model.Asset.User.FirstName)</dd>

                    <dt class="col-sm-6 border p-1 m-0">Procument Date</dt>
                    <dd class="col-sm-6 border p-1 m-0">@( Model.Asset.ProcurementDate?.ToString("dd/MM/yyyy"))</dd>

                    <dt class="col-sm-6 border p-1 m-0">Procument Status</dt>
                    <dd class="col-sm-6 border p-1 m-0">
                        @{
                            var procStatus = (ProcurementStatus)Model.Asset.StatusId;
                            switch (procStatus)
                            {
                                case ProcurementStatus.New:
                                    <div class="status-btn status-new">@procStatus</div>
                                    break;
                                case ProcurementStatus.Used:
                                    <div class="status-btn status-info">@procStatus</div>
                                    break;
                                case ProcurementStatus.Refurbished:
                                    <div class="status-btn status-warning">@procStatus</div>
                                    break;
                                case ProcurementStatus.Decommissioned:
                                    <div class="status-btn status-danger">@procStatus</div>
                                    break;
                                default:
                                    break;
                            }
                        }
                    </dd>
                </dl>
            </div>
            <div class="col-md-4">  
                <dl class="row">

                    <dt class="col-sm-6 border p-1 m-0">Department</dt>
                    <dd class="col-sm-6 border p-1 m-0">@Html.DisplayFor(model => model.Asset.Department!.Name)</dd>

                    <dt class="col-sm-6 border p-1 m-0">Manufacturer</dt>
                    <dd class="col-sm-6 border p-1 m-0">@Html.DisplayFor(model => model.Asset.Manufacturer!.Name)</dd>

                    <dt class="col-sm-6 border p-1 m-0">Serial Number</dt>
                    <dd class="col-sm-6 border p-1 m-0">@Html.DisplayFor(model => model.Asset.SerialNumber)</dd>


                    <dt class="col-sm-6 border p-1 m-0">Model</dt>
                    <dd class="col-sm-6 border p-1 m-0">@Html.DisplayFor(model => model.Asset.Model)</dd>

                    <dt class="col-sm-6 border p-1 m-0">Lifespan</dt>
                    <dd class="col-sm-6 border p-1 m-0">@(Html.DisplayFor(model => model.Asset.LifespanQuantity)) Years</dd>

                    <dt class="col-sm-6 border p-1 m-0">Cost</dt>
                    <dd class="col-sm-6 border p-1 m-0">E@(Html.DisplayFor(model => model.Asset.Cost))</dd>

                    <dt class="col-sm-6 border p-1 m-0">Serial Number</dt>
                    <dd class="col-sm-6 border p-1 m-0">@(Html.DisplayFor(model => model.Asset.SerialNumber))</dd>

                </dl>
            </div>
            <div class="col-md-4">
                <dl class="row">

                    <dt class="col-sm-6 border p-1 m-0">Placement</dt>
                    <dd class="col-sm-6 border p-1 m-0">
                        @(Model.Asset.IsPlacement ?
                                    Model.Asset.PlacementStartDate!.Value.ToString("dd/MM/yyyy") + " to " + Model.Asset.PlacementEndDate!.Value.ToString("dd/MM/yyyy")
                                    : "No"
                                    )
                    </dd>

                    <dt class="col-sm-6 border p-1 m-0">Donated</dt>
                    <dd class="col-sm-6 border p-1 m-0">@(Model.Asset.IsDonated ? "Yes" : "No")</dd>

                    <dt class="col-sm-6 border p-1 m-0">Vendor</dt>
                    <dd class="col-sm-6 border p-1 m-0">@Html.DisplayFor(model => model.Asset.Vendor!.Name)</dd>

                    <dt class="col-sm-6 border p-1 m-0">Service Provider</dt>
                    <dd class="col-sm-6 border p-1 m-0">@Html.DisplayFor(model => model.Asset.ServiceProvider!.Name)</dd>

                    <dt class="col-sm-6 border p-1 m-0">Current Location</dt>
                    <dd class="col-sm-6 border p-1 m-0">@(Model.MovementHistory?.FirstOrDefault()?.Facility?.FacilityName ?? Model.MovementHistory?.FirstOrDefault()?.ServicePoint?.Name ?? "-")</dd>

                    <dt class="col-sm-6 border p-1 m-0">Functional Status</dt>
                    @{

                        @if (Model.MovementHistory?.FirstOrDefault()?.Reason == MovementReason.Decommission)
                        {
                            
                            <dd class="col-sm-6 border p-1 m-0"><div class="status-btn status-danger">@Format.DisplayProcurementStatus(ProcurementStatus.Decommissioned)</div></dd>

                        }
                        else
                        {
                            var funcStatus = Model.MovementHistory?.FirstOrDefault()?.FunctionalStatus;
                            switch (funcStatus)
                            {
                                case FunctionalStatus.Functional:
                                    <dd class="col-sm-6 border p-1 m-0"><div class="status-btn status-new">@funcStatus</div></dd>
                                    break;
                                case FunctionalStatus.NonFunctional:
                                    <dd class="col-sm-6 border p-1 m-0"><div class="status-btn status-danger">@funcStatus</div></dd>
                                    break;
                                case FunctionalStatus.UnderMaintenance:
                                    <dd class="col-sm-6 border p-1 m-0"><div class="status-btn status-warning">@funcStatus</div></dd>
                                    break;
                                default:
                                    <dd class="col-sm-6 border p-1 m-0">-</dd>
                                    break;
                            }
                        }
                    }

                    <dt class="col-sm-6 border p-1 m-0">Servicable</dt>
                    <dd class="col-sm-6 border p-1 m-0">
                        @(Model.Asset.IsServiceable ?
                                    $"Every {Model.Asset.ServiceInterval.ToString()} Month(s)" : "No"
                                        )
                    </dd>
                    @if (Model.Asset.IsServiceable)
                    {
                        <dt class="col-sm-6 border p-1 m-0">Next Service Date</dt>
                        <dd class="col-sm-6 border p-1 m-0"> 
                            @(DateOnly.FromDateTime((DateTime)Model.Asset?.NextServiceDate!))
                        </dd>
                    }
                </dl>
            </div>
        </div>
    </div>
</div>

<!-- Service History Section -->
<div class="card mb-2">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Service History</span>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Type of Service</th>
                        <th>Status</th>
                        <th>Details</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var job in Model.ServiceHistory)
                    {
                        <tr>
                            <td>@job.DateCreated?.ToString("yyyy-MM-dd")</td>
                            <td>@job.FaultReport?.Name</td>
                            <td>@job.Status?.Name</td>
                            <td>@job.Remarks</td>
                            <td>
                                <a asp-controller="JobManagement" asp-action="jobCard" asp-route-id="@job.JobId" class="btn btn-sm btn-info me-1" title="View">
                                    <i class="fa fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

<!-- Movement/Assignment History Section -->
<div class="card mb-2">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Movement/Assignment History</span>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Facility</th>
                        <th>Service Point</th>
                        <th>Reason</th>
                        <th>Functional Status</th>
                        <th>Recieved By</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var move in Model.MovementHistory)
                    {
                        <tr>
                            <td>@move.MovementDate.ToString("yyyy-MM-dd")</td>
                            <td>
                                @if(move.DateRejected == null)
                                {

                                    @($"{move.Facility.FacilityName}")

                                }
                                else
                                {

                                    <span style="color:red">@($"Rejected {move.Facility.FacilityName}")</span>
                                }
                            </td>
                            <td>
                                @if (move.ServicePoint != null)
                                {
                                    @($"{move.ServicePoint.Name}")
                                }
                                else
                                {
                                    @("Unknown")
                                }
                            </td>
                            <td>@move.Reason</td>
                            @{
                                var moveStatus = move.FunctionalStatus;
                                switch (moveStatus)
                                {
                                    case FunctionalStatus.Functional:
                                        <td><div class="status-btn status-new">@moveStatus</div></td>
                                        break;
                                    case FunctionalStatus.NonFunctional:
                                        <td><div class="status-btn status-danger">@moveStatus</div></td>
                                        break;
                                    case FunctionalStatus.UnderMaintenance:
                                        <td><div class="status-btn status-warning">@moveStatus</div></td>
                                        break;
                                    default:
                                        <td>-</td>
                                        break;
                                }
                            }
                            @* <td>@move.FunctionalStatus</td> *@
                            <td>
                                @* TBD Replace with actual user *@
                                @(move.ReceivedBy?.ToString() ?? "N/A")
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
