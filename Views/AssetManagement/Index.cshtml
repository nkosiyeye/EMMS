@using EMMS.Utility
@using static EMMS.Models.Enumerators
@model EMMS.ViewModels.AssetIndexViewModel
@{

    ViewData["Title"] = "Manage Assets";
    ViewData["asset"] = "active";
    var isAdmin = ViewBag._currrentUserRole.UserType == Enumerators.UserType.Administrator;
    var isBiomed = ViewBag._currrentUserRole.UserType == Enumerators.UserType.Biomed;
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><strong>Manage Assets</strong></span>
        <div class="d-flex align-items-center">
            <a class="btn btn-primary btn-sm me-2 @(isAdmin || isBiomed ? "":"d-none")" asp-controller="AssetManagement" asp-action="registerAsset">
                <i class="fa fa-plus me-1"></i> New Asset
            </a>
            <button class="btn btn-success btn-sm me-2" title="Export to Excel" onclick="exportToExcel()">
                <i class="fa fa-download me-1"></i> Excel Report
            </button>
            <button class="btn btn-secondary btn-sm" title="Print Stickers" onclick="printSelectedStickers()">
                <i class="fa fa-print me-1"></i> Print Stickers
            </button>
        </div>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="assetTable">
                <thead class="table-dark">
                    <tr>
                        <th></th>
                        <th>Tag</th>
                        <th>Category</th>
                        <th>Item Name</th>
                        <th>Placement</th>
                        <th>Vendor</th>
                        <th>Service Provider</th>
                        <th>Procurement</th>
                        <th>Facility</th>
                        <th>Service Point</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var asset in Model.assetViewModels!)
                    {
                        var lastMove = asset.LastMovement;
                        <tr>
                            <td>
                                <input type="checkbox" class="asset-checkbox"
                                       value='@Html.Raw(Json.Serialize(new { asset.Asset.AssetTagNumber, asset.Asset.SerialNumber, asset.Asset.Model }))'>
                            </td>
                            <td>@asset.Asset.AssetTagNumber</td>
                            <td>@Format.FormatCategory(asset.Asset?.Category?.Name)</td>
                            <td>@asset.Asset?.SubCategory?.Name</td>
                            <td>@(asset.Asset.IsPlacement ? "Yes" : "No")</td>
                            <td>@(asset.Asset.Vendor?.Name ?? "Unknown")</td>
                            <td>@(asset.Asset.ServiceProvider?.Name ?? "Unknown")</td>
                            <td>@Format.DisplayProcurementStatus((ProcurementStatus)asset.Asset.StatusId)</td>
                            <td>@(lastMove?.Facility?.FacilityName ?? "-")</td>
                            <td>
                                @if (lastMove?.ServicePoint?.Name != null)
                                {
                                    @lastMove.ServicePoint.Name
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Unknown</span>
                                }
                            </td>
                            <td>
                                @if (lastMove != null)
                                {
                                    @if (lastMove.Reason != Enumerators.MovementReason.Decommission)
                                    {
                                        @Format.DisplayFunctionalStatus(lastMove.FunctionalStatus)
                                    }
                                    else
                                    {
                                        @Format.DisplayProcurementStatus(ProcurementStatus.Decommissioned)
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                        <i class="fa fa-ellipsis-h"></i>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li class="@(lastMove != null ? "d-none" : isAdmin || isBiomed ? "":"d-none")">
                                            <a class="dropdown-item" asp-controller="AssetManagement" asp-action="edit" asp-route-id="@asset.Asset.AssetId">
                                                <i class="fa fa-edit me-1"></i> Edit Asset
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="AssetManagement" asp-action="detail" asp-route-id="@asset.Asset.AssetId">
                                                <i class="fa fa-eye me-1"></i> View Asset
                                            </a>
                                        </li>
                                        <li class="@(lastMove?.Reason == Enumerators.MovementReason.Decommission ? "d-none" : "")">
                                            <a class="dropdown-item" asp-controller="AssetMovement" asp-action="moveAsset" asp-route-id="@asset.Asset.AssetId">
                                                <i class="fa fa-arrows-alt me-1"></i> Move Asset
                                            </a>
                                        </li>
                                        <li class="@(lastMove?.Reason == Enumerators.MovementReason.Decommission ? "d-none" : "")">
                                            <a class="dropdown-item" asp-controller="JobManagement" asp-action="workRequest" asp-route-id="@asset.Asset.AssetId">
                                                <i class="fa fa-toolbox me-1"></i> Work Request
                                            </a>
                                        </li>
                                        <li class="@(lastMove?.Reason == Enumerators.MovementReason.Decommission ? "d-none" : "") d-none">
                                            <button class="dropdown-item text-danger" title="Delete (not implemented)">
                                                <i class="fa fa-trash me-1"></i> Delete Asset
                                            </button>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



@section Scripts {
    <script>
            $(document).ready(function () {
                $('#assetTable').DataTable({
                    // Optional: customize page length, language, etc.
                    pageLength: 10
                });
            });

    </script>
}
